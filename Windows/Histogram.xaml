<Window x:Class="Stats_Mafia.Windows.Histogram"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stats_Mafia.Windows"
        mc:Ignorable="d"
        Title="Histogram Display" Height="480" Width="800" ResizeMode="NoResize" ShowInTaskbar="True">
    <Grid Margin="5" ShowGridLines="True">
        <StackPanel>
            <TextBlock x:Name="TitleDisplay" Text="Histogram Title" AllowDrop="False" FontSize="20" HorizontalAlignment="Center" Padding="5" FontWeight="Bold"/>
            <Canvas x:Name="DisplayCanvas" Background="White" SnapsToDevicePixels="True" ClipToBounds="True" Loaded="DisplayCanvas_Loaded" VerticalAlignment="Center" MinHeight="380" SizeChanged="DisplayCanvas_SizeChanged" MouseLeftButtonDown="DisplayCanvas_MouseLeftButtonDown" MouseRightButtonDown="DisplayCanvas_MouseRightButtonDown"/>
        </StackPanel>
    </Grid>
</Window>
